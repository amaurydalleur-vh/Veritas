{
  "name": "veritas-institutional-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "node ./node_modules/vite/bin/vite.js",
    "build": "node ./node_modules/vite/bin/vite.js build",
    "preview": "node ./node_modules/vite/bin/vite.js preview",
    "compile": "npx hardhat compile --config hardhat.config.cjs",
    "deploy:testnet": "npx hardhat run scripts/deploy.cjs --network arbitrumSepolia --config hardhat.config.cjs",
    "deploy:local": "npx hardhat run scripts/deploy.cjs --network localhost --config hardhat.config.cjs",
    "node": "npx hardhat node --config hardhat.config.cjs",
    "wallet": "node scripts/generate-wallet.cjs"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@rainbow-me/rainbowkit": "^2.2.10",
    "@tanstack/react-query": "^5.90.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "viem": "^2.46.3",
    "wagmi": "^2.19.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "dotenv": "^17.3.1",
    "hardhat": "^2.28.6",
    "vite": "^5.4.11"
  }
}
